<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".jointHolderLogin">


    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottielogin"
        android:layout_width="314dp"
        android:layout_height="256dp"
        android:layout_marginTop="48dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView29"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/smartphone" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="318dp"
        android:layout_height="214dp"
        android:layout_marginBottom="100dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/lottielogin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/lottielogin"
        app:layout_constraintTop_toBottomOf="@+id/lottielogin"
        app:layout_constraintVertical_bias="0.519"
        app:srcCompat="@drawable/shape3" />

    <TextView
        android:id="@+id/textView29"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Joint Holder Log In"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/lottielogin"
        app:layout_constraintStart_toStartOf="@+id/lottielogin"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/phoneNumberJointLogin"
        android:layout_width="236dp"
        android:layout_height="52dp"
        android:layout_marginBottom="84dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="phone"
        android:paddingLeft="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/imageView10"
        app:layout_constraintHorizontal_bias="0.524"
        app:layout_constraintStart_toStartOf="@+id/imageView10" />

    <TextView
        android:id="@+id/textView30"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enter Phone Number"
        android:textColor="@color/white"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/phoneNumberJointLogin"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumberJointLogin"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberJointLogin"
        app:layout_constraintTop_toTopOf="@+id/imageView10" />

    <ImageView
        android:id="@+id/proceedOTP"
        android:layout_width="181dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView10"
        app:layout_constraintEnd_toEndOf="@+id/phoneNumberJointLogin"
        app:layout_constraintStart_toStartOf="@+id/phoneNumberJointLogin"
        app:layout_constraintTop_toBottomOf="@+id/phoneNumberJointLogin"
        app:srcCompat="@drawable/buttonshape2" />

    <TextView
        android:id="@+id/textView31"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Proceed to OTP"
        android:textColor="@android:color/holo_red_dark"
        app:layout_constraintBottom_toBottomOf="@+id/proceedOTP"
        app:layout_constraintEnd_toEndOf="@+id/proceedOTP"
        app:layout_constraintStart_toStartOf="@+id/proceedOTP"
        app:layout_constraintTop_toTopOf="@+id/proceedOTP" />

</androidx.constraintlayout.widget.ConstraintLayout>