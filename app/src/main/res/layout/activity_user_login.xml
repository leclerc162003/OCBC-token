<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient1"
    tools:context=".userLogin">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie"
        android:layout_width="333dp"
        android:layout_height="259dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        app:layout_constraintVertical_bias="0.044"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/register" />

    <ImageView
        android:id="@+id/backNRICpic"
        android:layout_width="328dp"
        android:layout_height="326dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lottie"
        app:layout_constraintVertical_bias="0.407"
        app:srcCompat="@drawable/shape3" />

    <EditText
        android:id="@+id/loginID"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_marginTop="34dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint="Username"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColorHint="#969696"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/backNRICpic"
        app:layout_constraintStart_toStartOf="@+id/backNRICpic"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <EditText
        android:id="@+id/loginpassword"
        android:layout_width="293dp"
        android:layout_height="54dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/custominput"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPersonName"
        android:paddingLeft="20dp"
        android:textColorHint="#969696"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="@+id/backNRICpic"
        app:layout_constraintStart_toStartOf="@+id/backNRICpic"
        app:layout_constraintTop_toBottomOf="@+id/loginID" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="140dp"
        android:layout_height="39dp"
        android:layout_marginTop="32dp"
        android:text="OCBC Bank"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Login"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/backNRICpic"
        app:layout_constraintStart_toStartOf="@+id/backNRICpic"
        app:layout_constraintTop_toTopOf="@+id/backNRICpic" />

    <ImageView
        android:id="@+id/loginSi"
        android:layout_width="286dp"
        android:layout_height="56dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="@+id/backNRICpic"
        app:layout_constraintEnd_toEndOf="@+id/loginpassword"
        app:layout_constraintStart_toStartOf="@+id/loginpassword"
        app:layout_constraintTop_toBottomOf="@+id/loginpassword"
        app:srcCompat="@drawable/buttonshape1" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="@color/white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/loginSi"
        app:layout_constraintEnd_toEndOf="@+id/loginSi"
        app:layout_constraintStart_toStartOf="@+id/loginSi"
        app:layout_constraintTop_toTopOf="@+id/loginSi" />

</androidx.constraintlayout.widget.ConstraintLayout>