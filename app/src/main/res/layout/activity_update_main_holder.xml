<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".updateMainHolder">


    <ImageView
        android:id="@+id/logo"
        android:layout_width="90dp"
        android:layout_height="85dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ocbclogowwithoutwords" />

    <TextView
        android:id="@+id/text"
        android:layout_width="241dp"
        android:layout_height="71dp"
        android:layout_marginTop="12dp"
        android:text="OCBC Account Creation"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/logo"
        app:layout_constraintTop_toTopOf="@+id/logo" />

    <Spinner
        android:id="@+id/maintitles"
        android:layout_width="119dp"
        android:layout_height="42dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/logo"
        app:layout_constraintTop_toBottomOf="@+id/logo" />


    <EditText
        android:id="@+id/mainName"
        android:layout_width="178dp"
        android:layout_height="41dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/text"
        app:layout_constraintHorizontal_bias="0.794"
        app:layout_constraintStart_toEndOf="@+id/maintitles"
        app:layout_constraintTop_toBottomOf="@+id/text" />

    <Spinner
        android:id="@+id/mainIDtype"
        android:layout_width="134dp"
        android:layout_height="37dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintStart_toStartOf="@+id/maintitles"
        app:layout_constraintTop_toBottomOf="@+id/maintitles" />

    <EditText
        android:id="@+id/mainNRIC"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="NRIC"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mainName"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/mainIDtype"
        app:layout_constraintTop_toBottomOf="@+id/mainName" />

    <EditText
        android:id="@+id/mainHP"
        android:layout_width="200dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Phone Number"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/mainIDtype"
        app:layout_constraintTop_toBottomOf="@+id/mainIDtype" />

    <Spinner
        android:id="@+id/mainGender"
        android:layout_width="99dp"
        android:layout_height="45dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/mainNRIC"
        app:layout_constraintHorizontal_bias="0.454"
        app:layout_constraintStart_toEndOf="@+id/mainHP"
        app:layout_constraintTop_toBottomOf="@+id/mainNRIC" />

    <EditText
        android:id="@+id/mainNationality"
        android:layout_width="335dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Nationality"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mainEmail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainEmail"
        app:layout_constraintTop_toBottomOf="@+id/mainEmail" />

    <Spinner
        android:id="@+id/mainMarital"
        android:layout_width="135dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toStartOf="@+id/mainRace"
        app:layout_constraintHorizontal_bias="0.032"
        app:layout_constraintStart_toStartOf="@+id/mainDOB"
        app:layout_constraintTop_toBottomOf="@+id/mainDOB" />

    <Spinner
        android:id="@+id/mainRace"
        android:layout_width="120dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="8dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/mainDOB"
        app:layout_constraintTop_toBottomOf="@+id/mainDOB" />

    <Spinner
        android:id="@+id/mainResidentType"
        android:layout_width="324dp"
        android:layout_height="47dp"
        android:layout_marginTop="12dp"
        android:background="@android:drawable/btn_dropdown"
        android:spinnerMode="dropdown"
        app:layout_constraintEnd_toEndOf="@+id/mainRace"
        app:layout_constraintStart_toStartOf="@+id/mainMarital"
        app:layout_constraintTop_toBottomOf="@+id/mainMarital" />

    <EditText
        android:id="@+id/mainDOB"
        android:layout_width="335dp"
        android:layout_height="42dp"
        android:layout_marginTop="12dp"
        android:ems="10"
        android:hint="Date of Birth"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mainNationality"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainNationality"
        app:layout_constraintTop_toBottomOf="@+id/mainNationality" />

    <EditText
        android:id="@+id/mainEmail"
        android:layout_width="333dp"
        android:layout_height="44dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Email"
        android:inputType="textEmailAddress"
        app:layout_constraintEnd_toEndOf="@+id/jointGender"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/mainHP"
        app:layout_constraintTop_toBottomOf="@+id/mainHP" />

    <EditText
        android:id="@+id/mainAddress"
        android:layout_width="202dp"
        android:layout_height="39dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Address"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/mainResidentType"
        app:layout_constraintTop_toBottomOf="@+id/mainResidentType" />

    <EditText
        android:id="@+id/mainPostal"
        android:layout_width="123dp"
        android:layout_height="38dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Postal Code"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mainResidentType"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toEndOf="@+id/mainAddress"
        app:layout_constraintTop_toBottomOf="@+id/mainResidentType" />

    <EditText
        android:id="@+id/mainOccupation"
        android:layout_width="339dp"
        android:layout_height="42dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:hint="Occupation"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/mainPostal"
        app:layout_constraintStart_toStartOf="@+id/mainAddress"
        app:layout_constraintTop_toBottomOf="@+id/mainAddress" />

    <ImageView
        android:id="@+id/mainCreate"
        android:layout_width="216dp"
        android:layout_height="58dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/mainOccupation"
        app:srcCompat="@drawable/buttonshape1" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        app:layout_constraintBottom_toBottomOf="@+id/mainCreate"
        app:layout_constraintEnd_toEndOf="@+id/mainCreate"
        app:layout_constraintStart_toStartOf="@+id/mainCreate"
        app:layout_constraintTop_toTopOf="@+id/mainCreate" />


</androidx.constraintlayout.widget.ConstraintLayout>